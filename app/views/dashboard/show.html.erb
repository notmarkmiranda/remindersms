<div class="container mt-4">
  <h1>Dashboard</h1>
  <div class="row px-3">
    <%= link_to "Create new group", new_group_path, class: "btn btn-light" %>
  </div>
  <div class="row mt-4">
    <div class="col-md-5">
      <div class="card text-dark">
        <h5 class="card-header">Your Groups</h5>
        <div class="card-body">
          <% @groups.each do |group| %>
            <div class="group mb-4">
              <%= link_to group.name, group_path(group) %><br />
              <%= link_to "EDIT", "#" %> | <%= link_to "DELETE", "#" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>